# Telegram Bot Configuration
TELEGRAM_TOKEN=your_bot_token_here
DEBUG=false

# Bot Owner Configuration
# Comma-separated list of Telegram user IDs who should have Owner permission
# Get your user ID by messaging @userinfobot on Telegram
# Example: BOT_OWNER_IDS=123456789,987654321
BOT_OWNER_IDS=

# MongoDB Configuration
# For MongoDB Atlas (Cloud):
MONGO_URI=mongodb+srv://your_username:your_password@cluster.xxxxx.mongodb.net/?retryWrites=true&w=majority
# For Local MongoDB:
# MONGO_URI=mongodb://localhost:27017
DATABASE_NAME=telegram_bot
MONGO_TIMEOUT=10s

# Application Configuration
ENVIRONMENT=production
LOG_LEVEL=info
LOG_FORMAT=text
PORT=8080

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MIN=20

# Metrics & Monitoring
METRICS_ENABLED=true
METRICS_PORT=9091

# Production Deployment (GitHub Actions Secrets)
# PROD_HOST=your.server.ip
# PROD_USER=deploy_user
# PROD_PORT=22
# PROD_SSH_KEY=your_private_key
# SLACK_WEBHOOK=your_slack_webhook_url